<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="me.eranik.app.handler.MainHandler"
          alignment="CENTER" hgap="1" vgap="5">

    <HBox alignment="CENTER" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <Button text="Easy" onAction="#loadGameScene"/>
    </HBox>

    <HBox alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0">
        <Button text="Hard" onAction="#loadGameScene"/>
    </HBox>

    <HBox alignment="CENTER" GridPane.rowIndex="4" GridPane.columnIndex="0">
        <Button text="Back" onAction="#loadPreviousScene"/>
    </HBox>

    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>

</GridPane>
